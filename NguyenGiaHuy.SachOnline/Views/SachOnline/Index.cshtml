@model NguyenGiaHuy.SachOnline.Models.SachListViewModel

@{
    ViewBag.Title = "Trang Chủ - Danh sách sách mới";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 class="mb-4">Sách mới nhất</h2>

<div class="row">
    @foreach (var item in Model.Saches)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/Images/@item.anhSP" alt="@item.TenSach" class="imgbook" />
                <div class="card-body">
                    <h4 class="card-title">@item.TenSach</h4>
                    <p class="card-text">Giá: @String.Format("{0:#,##0} VNĐ", item.GiaBan)</p>
                    <a href="@Url.Action("BookDetail", "SachOnline", new { id = item.SachID })" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.PagingInfo.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
}
